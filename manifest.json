{
  "manifest_version": 3,
  "name": "Tab Auto Refresher",
  "version": "1.7",
  "description": "Refreshes specific tabs at random intervals with configurable units. Option to reopen closed tabs.",
  "permissions": [
    "tabs",
    "alarms",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}